@model List<Model.EF.advertisement>
@{
    ViewBag.Title = "Quản lý quảng cáo";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var sessionMer = (Model.EF.Account)(Model.EF.Account)Session[TMDT.Common.CommonConstants.USER_INFO_SESSION];
    if (sessionMer != null)
    {
        if (sessionMer.Level != 2)
        {
            <script type="text/javascript">
                window.location.href = "/"
            </script>
        }
    }
    else
    {
        <script type="text/javascript">
            window.location.href = "/"
        </script>
    }
}
@section jsFooter{
    <script src="~/Scripts/jsController/ShopManager.js"></script>
}
<div class="content">
    <div class="content_top">
        <div class="heading">
            <h3>Quảng cáo của tôi</h3>
        </div>
        <div class="clear"></div>
    </div>
    <div style="float:right; margin-bottom:10px;">
        <p><strong>(*)Lưu ý: Quý khách vui lòng kiểm tra Email nếu thấy tình trạng yêu cầu là: <a style="color:blue;">Chờ thanh toán</a></strong></p>
        <p style="float:right;"><strong>Nếu cần giúp đỡ - Liên hệ: 035-677-5770 <i class="fa fa-phone" aria-hidden="true"></i></strong></p>
    </div>
    <div class="section group row float-right text-white">
        <a href="/quang-cao/xem-quang-cao" class="btnProduct btn btn-danger">Xem quảng cáo</a>
        <a href="/quang-cao/gui-yeu-cau" class="btnCreate btn btn-info">Tạo quảng cáo</a>
        <a href="/quang-cao" class="btnProduct btn btn-primary">Xem yêu cầu</a>
    </div>
    <div class="clear"></div>
    <div class="section group">
        <table class="table table-bordered table-striped">
            <thead>
                <tr style="color:white;background-color:#383838">
                    <th>Tên quảng cáo</th>
                    <th width="120" style="text-align:center;">Ảnh</th>
                    <th>Vị trí</th>
                    <th>Ngày bắt đầu</th>
                    <th>Ngày kết thúc</th>
                    <th>Hiệu lực</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    var date = item.EndDate.Value.Day - DateTime.Now.Day;
                    var checkdate = item.ActiveDate.Value.Day - DateTime.Now.Day;
                    <tr style="font-size:medium;">
                        <td>@item.Content</td>
                        @if (item.Location != "SLIDE")
                        {
                            <td style="text-align:center;"><a href="@item.Image"><img src="@item.Image" width="50" height="80" /></a></td>
                        }
                        else
                        {
                            <td><a href="@item.Image"><img src="@item.Image" width="100" height="50" /></a></td>
                        }
                        <td>@item.LocationAd.Name</td>
                        <td>@String.Format("{0:dd/MM/yyyy}", @item.ActiveDate)</td>
                        <td>@String.Format("{0:dd/MM/yyyy}", @item.EndDate)</td>
                        @if (item.Status == true)
                        {
                            if (checkdate > 0)
                            {
                                <td style="color:green">Chưa tới ngày đăng</td>
                            }
                            else
                            {
                                <td style="color:green">Còn lại @date ngày</td>
                            }
                        }
                        else
                        {
                            if (item.OrderAdvertisements.Where(x => x.IDAd == item.ID).SingleOrDefault().Status == 1)
                            {
                                <td style="color:red">Hết hạn</td>
                            }
                            else if (item.OrderAdvertisements.Where(x => x.IDAd == item.ID).SingleOrDefault().Status == 3)
                            {
                                <td style="color:blue">Chờ thanh toán</td>
                            }
                            else if (item.OrderAdvertisements.Where(x => x.IDAd == item.ID).SingleOrDefault().Status == 0)
                            {
                                <td style="color:blue">Đang xử lý</td>
                            }
                            else
                            {
                                <td style="color:gray">Đã hủy</td>
                            }
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
