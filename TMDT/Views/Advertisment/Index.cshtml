@model List<Model.EF.OrderAdvertisement>
@{
    ViewBag.Title = "Quản lý quảng cáo";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var sessionMer = (Model.EF.Account)(Model.EF.Account)Session[TMDT.Common.CommonConstants.USER_INFO_SESSION];
    if (sessionMer != null)
    {
        if (sessionMer.Level != 2)
        {
            <script type="text/javascript">
                window.location.href = "/"
            </script>
        }
    }
    else
    {
        <script type="text/javascript">
            window.location.href = "/"
        </script>
    }
}
@section jsFooter{
    <script src="~/Scripts/jsController/ShopManager.js"></script>
}
<div class="content">
    <div class="content_top">
        <div class="heading">
            <h3>Danh sách yêu cầu</h3>
        </div>
        <div class="clear"></div>
    </div>
    <br />
    <div style="float:right; margin-bottom:10px;">
        <p><strong>(*)Lưu ý: Quý khách vui lòng kiểm tra Email nếu thấy tình trạng yêu cầu là: <a style="color:blue;">Đã duyệt (chờ thanh toán)</a></strong></p>
        <p style="float:right;"><strong>Cần giúp đỡ? - Liên hệ: 035-677-5770 <i class="fa fa-phone" aria-hidden="true"></i></strong></p>
    </div>
    <div class="section group row float-right text-white">
        <a href="/quang-cao/xem-quang-cao" class="btnProduct btn btn-danger">Xem quảng cáo</a>
        <a href="/quang-cao/gui-yeu-cau" class="btnCreate btn btn-info">Tạo quảng cáo</a>
        <a href="/quang-cao" class="btnProduct btn btn-primary">Xem yêu cầu</a>
    </div>
    <div class="clear"></div>
    <div class="section group">
        <table class="table table-bordered table-striped">
            <thead>
                <tr style="color:white;background-color:#383838">
                    <td>Mã quảng cáo</td>
                    <th>Tên quảng cáo</th>
                    <th width="120" style="text-align:center;">Ảnh</th>
                    <th>Vị trí</th>
                    <th>Ngày bắt đầu</th>
                    <th>Ngày kết thúc</th>
                    <th>Thành tiền</th>
                    <th>Tình trạng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr style="font-size:medium;">
                    <td>#@item.ID</td>
                    <td>@item.advertisement.Content</td>
                    @if (item.advertisement.Location != "SLIDE")
                    {
                        <td style="text-align:center;"><a href="@item.advertisement.Image"><img src="@item.advertisement.Image" width="50" height="80" /></a></td>
                    }
                    else
                    {
                        <td><a href="@item.advertisement.Image"><img src="@item.advertisement.Image" width="100" height="50" /></a></td>
                    }
                    <td>@item.advertisement.LocationAd.Name</td>
                    <td>@String.Format("{0:dd/MM/yyyy}", @item.StartDate)</td>
                    <td>@String.Format("{0:dd/MM/yyyy}", @item.EndDate)</td>
                    <td>@item.Price.GetValueOrDefault(0).ToString("N0")VNĐ</td>
                    @if (item.Status == 3)
                    {
                        <td style="color:blue">Đã duyệt(Chờ thanh toán)</td>

                    }
                    else if (item.Status == 0)
                    {
                        <td style="color:red">Đang kiểm duyệt</td>
                    }
                    else if (item.Status == 1)
                    {
                        <td style="color:green">Đăng thành công</td>
                    }
                    else
                    {
                        <td style="color:gray">Từ chối</td>
                    }
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
