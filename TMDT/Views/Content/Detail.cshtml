@model Model.EF.Content
@{
    ViewBag.Title = "Chi tiết";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content">
    <div class=" content_top">
        <div class=" heading">
            <h3>@Model.Name</h3>
        </div>
        <div class="clear"></div>
    </div>
    <div class="section-group">
        <div class="image group">
            <div class="grid images_3_of_1">
                <img src="@Model.Image" alt="" />
            </div>
        </div>
        <h2>@Html.Raw(Model.Detail)</h2>
        <span style="float:left;">Tag: </span>
        <ul>
            @{
                var tags = (List<Model.EF.Tag>)ViewBag.Tags;
                foreach (var tag in tags)
                {
                    <li style="float:left; margin-left:5px; text-decoration:underline;"><a href="/tag/@tag.ID"> @tag.Name</a></li>
                }
            }
        </ul>
    </div>
</div>


