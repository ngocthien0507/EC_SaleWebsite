@model PagedList.IPagedList<Model.EF.advertisement>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Quản lý quảng cáo";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var ListLocationAd = (List<Model.EF.LocationAd>)ViewBag.ListLocationAd;

}
@section header{
    Quản lý quảng cáo
}
@section css{
    <link href="~/Content/PagedList.css" rel="stylesheet" />
}
@section script{
    <!-- Page level plugins -->
    <script src="~/assets/Admin/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/assets/Admin/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <script type="text/javascript">
        $("#SelectLocation").change(function () {
            var idLocation = $(this).val();
            window.location.href = "/Admin/Advertisement/ListAd?searchLocation=" + idLocation;
        });
        $("#SelectStatus").change(function () {
            var status = $(this).val();
            window.location.href = "/Admin/Advertisement/ListAd?searchStatus=" + status;
        });
    </script>
    @if (ViewBag.searchStatus != null)
    {
        <script>
            localStorage.setItem("Select1", "@ViewBag.searchStatus");
            $('#SelectStatus').find('option').each(function (i, e) {
                if ($(e).val() == localStorage.getItem("Select1")) {
                    $('#SelectStatus').prop('selectedIndex', i);
                }
            });
        </script>
    }
